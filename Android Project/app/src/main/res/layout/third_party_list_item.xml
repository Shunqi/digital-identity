<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/third_party_textView"
        android:layout_width="209dp"
        android:layout_height="34dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="40dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="TextView"
        android:textColor="#270B61"
        app:layout_constraintEnd_toStartOf="@+id/third_party_checkBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/third_party_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/third_party_textView"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>