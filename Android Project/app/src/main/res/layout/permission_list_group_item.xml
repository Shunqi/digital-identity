<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/permission_category"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="1dp"
        android:paddingBottom="10dp"
        android:text="Item"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#270B61"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/permission_read"
        app:layout_constraintEnd_toStartOf="@+id/permission_read"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/permission_read" />

    <CheckBox
        android:id="@+id/permission_share"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/permission_read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/permission_write"
        app:layout_constraintTop_toTopOf="@+id/permission_read"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/permission_read"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/permission_write"
        app:layout_constraintStart_toEndOf="@+id/permission_category"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/permission_write"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/permission_read"
        app:layout_constraintEnd_toStartOf="@+id/permission_share"
        app:layout_constraintStart_toEndOf="@+id/permission_read"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>